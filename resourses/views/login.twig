{% extends "templates/base.twig" %}

{% set page_title = "Iniciar sesión" %}
{% set page_meta_description = "Inicia sesión y aprende ya a programar desde 0 con nuestros cursos" %}
{% set page_meta_robots = "index, follow" %}

{% block body %}
    <div class="row mt-5">
        <div class="col card">

            <div class="card-header">
                Inicio de sesión
            </div>

            <div class="card-body">

                {{ TwigFunctions('flash', ['errors', 'danger']) | raw }}
                {{ TwigFunctions('flash', ['message', 'info']) | raw }}

                <form action="{{ TwigFunctions('base_url', 'login') }}" method="POST">
                    <div class="form-group">
                        <label for="email">Correo electrónico</label>
                        <input class="form-control" value="{{ TwigFunctions('flash', ['post']).email }}" id="email" name="email" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input class="form-control" type="password" id="password" name="password" autocomplete="off" />
                    </div>

                    <button class="btn btn-primary" type="submit">Iniciar sesión</button>
                </form>

            </div>

        </div>
    </div>
{% endblock %}